### control-center.properties ###
bootstrap.servers={{cp1_broker1_a_public_ip}}:9092,{{cp1_broker2_a_public_ip}}:9092,{{cp1_broker3_a_public_ip}}:9092

#zookeeper.connect=kafka1:2181,kafka2:2181/confluent
confluent.controlcenter.command.topic=_confluent-command
