confluent.controlcenter.connect.connect-cluster.cluster=http://{{cp1_connect1_a_private_ip}}:8083,http://{{cp1_connect2_a_private_ip}}:8083
confluent.controlcenter.data.dir=/data/control-center
confluent.controlcenter.id=1
